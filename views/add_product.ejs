<body style = "background:  #f78888;">
<div class = "container"  style = "background: #f1e9d2;">
      <div class="page-header text-center">
            <h1>Add Product</h1>
            <a href = "/profile" class ="btn btn-danger btn-sm">Dashboard</a>
            <a href = "/products" class ="btn btn-danger btn-sm">Products</a>
            <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            <br><br>
           <div style = "background-color:#f5f7fa;">
            
            <form method="post" action="/products/add" >
               
                <table cellpadding="11">
                   <br><br>
                <tr>
                     <label for="name">Name :</label>
                    <input type="text" name="name" required></td>
                 </tr>
                 <br><br>
                 <tr>
                     <label for="category">Category :</label>
                  <input type="text" name="category" required></td>
               </tr>
                <br><br>
                <tr>
                   <label for="quantity">Quantity :</label>
                   <input type="text" name="quantity" required></td>
                 </tr>
                 <br><br>
                  <tr>
                        <label for="quantity">Expiration :</label>
                    <input type="date" name="expiration" required></td>
                 </tr>
                 <br><br>
                 <tr>
                     <label for="quantity">Calories :</label>
                    <input type="text" name="calories" required></td>
                 </tr>
                 <br><br>
                 <tr>
                     <label for="quantity">Serving :</label>
                    <input type="text" name="serving" required></td>
                 </tr>
                 <br><br>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="window.location.href = '/products'">
                    </td>
                 </tr>
                </table>
            </form>
            
        
</div>
        
</body>
</html>